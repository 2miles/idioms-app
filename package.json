{
  "name": "idioms-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "start": "concurrently \"npm run start:server\" \"npm run start:client\"",
    "start:server": "cd server && npx tsx server.ts",
    "start:client": "cd client && npm run dev",
    "test:stack": "concurrently \"npm run test:server\" \"npm run test:client\"",
    "test:server": "npm run dev:test --prefix server",
    "test:client": "npm run dev:test --prefix client"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "dotenv": "^16.5.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.63.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/node": "^22.15.17",
    "concurrently": "^9.1.0",
    "eslint": "^9.13.0",
    "eslint-plugin-simple-import-sort": "^12.1.1"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/2miles/idioms-app.git"
  },
  "keywords": [],
